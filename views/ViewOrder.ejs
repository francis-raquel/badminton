<%- include('partials/header') %>

<div class="container mt-4">
  <h2>Saved Orders</h2>

  <% if (orders.length === 0) { %>
    <div class="alert alert-warning">No orders saved yet.</div>
  <% } else { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>User ID</th>
          <th>Date</th>
          <th>Customer Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.userid %></td>
            <td><%= new Date(order.date).toLocaleDateString() %></td>
            <td><%= order.name %></td>
            <td><%= order.email %></td>
            <td><%= order.phone %></td>
            <td>$<%= order.amount.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <div class="alert alert-info mt-4" role="alert">
    ✅ Customers will be notified via <strong>email</strong> and <strong>SMS</strong> once their order is ready for pickup. Kindly wait for confirmation.
  </div>

  <div style="margin-top: 30px; text-align: right;">
    <a href="/ITadmin" style="padding: 10px 20px; margin-right: 10px; background-color: #007bff; color: white; border-radius: 5px; text-decoration: none;">← Back to ITAdmin</a>
    <a href="/" style="padding: 10px 20px; background-color: rgb(73, 74, 74); color: white; border-radius: 5px; text-decoration: none;">🏠 Home</a>
  </div>
</div>

<%- include('partials/footer') %>
